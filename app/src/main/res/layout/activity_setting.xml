    <Button
        android:id="@+id/button12"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickChart"
        android:text="GO! CHART" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="175dp"
        android:layout_marginStart="119dp"
        android:text="Main-Right"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView"
        android:text="Sub-Right"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="96dp"
        android:text="Main-Left"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-96dp"
        android:text="Sub-Left"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/mr_min"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="364dp"
        android:ems="10"
        android:hint="range_min"
        android:inputType="number" />

    <EditText
        android:id="@+id/ml_min"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignStart="@+id/mr_min"
        android:ems="10"
        android:hint="range_min"
        android:inputType="number" />

    <EditText
        android:id="@+id/sr_min"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignStart="@+id/mr_min"
        android:ems="10"
        android:hint="range_min"
        android:inputType="number" />

    <EditText
        android:id="@+id/sl_min"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button12"
        android:layout_alignStart="@+id/mr_min"
        android:ems="10"
        android:hint="range_min"
        android:inputType="number" />

    <EditText
        android:id="@+id/mr_max"
        android:layout_width="100dp"
