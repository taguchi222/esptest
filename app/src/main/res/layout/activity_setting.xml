        android:ems="10"
        android:hint="range_max"
        android:inputType="number" />

    <EditText
        android:id="@+id/ml_max"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignStart="@+id/mr_max"
        android:ems="10"
        android:hint="range_max"
        android:inputType="number" />

    <EditText
        android:id="@+id/sl_max"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button12"
        android:layout_alignStart="@+id/mr_max"
        android:ems="10"
        android:hint="range_max"
        android:inputType="number" />

    <Spinner
        android:id="@+id/mr_unit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/mr_min"
        android:layout_marginEnd="399dp"
        android:entries="@array/unit" />

    <Spinner
        android:id="@+id/sr_unit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/mr_unit"
        android:layout_below="@+id/textView"
        android:layout_marginTop="-175dp"
        android:entries="@array/unit" />

    <Spinner
        android:id="@+id/sl_unit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/mr_unit"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="-96dp"
        android:entries="@array/unit" />

    <Spinner
        android:id="@+id/ml_unit"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/mr_unit"
        android:layout_below="@+id/sr_unit"
        android:entries="@array/unit" />
